<Window x:Class="PicSim.UI.Views.FrequencyControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FrequencyControllerWindow" Height="80" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Frequency Controller" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" />
        <TextBox Text="0" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right"/>
        <Button  Grid.Column="1" Grid.Row="1" Content="Set"/>
    </Grid>
</Window>
