<Window x:Class="PicSim.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:PicSim.UI.ViewModels"
        xmlns:views="clr-namespace:PicSim.UI.Views"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        d:DataContext="{x:Type local:MainWindowViewModel}"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="-1,0,1,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Load file..." Command="{Binding LoadFileCommand}"/>
            <MenuItem Header="Start/Stop" Command="{Binding StartStopCommand}"/>
        </Menu>
        <views:MemoryTableView Grid.Row="1" Grid.Column="0"
                               DataContext="{Binding MemoryTable}"/>
        <avalon:TextEditor Grid.Row="2" Grid.Column="1"
                           Name="textEditor" views:AvalonEditHelpers.TextBinding="{Binding Simulator.File.Text}"
                           FontFamily="Lucida Console"/>
    </Grid>
</Window>
